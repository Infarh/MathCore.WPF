<Window x:Class="MathCore.WPF.WindowTest.TestWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:MathCore.WPF.WindowTest"
        xmlns:vm="clr-namespace:MathCore.WPF.WindowTest.ViewModels"
        xmlns:oxy="http://oxyplot.org/wpf/contrib"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:MathCore.WPF.Behaviors;assembly=MathCore.WPF"
        Title="{Binding Title}"
        Width="800" Height="450">
    <Window.DataContext>
        <vm:TestWindow1ViewModel/>
    </Window.DataContext>
    <DockPanel Margin="5">
        <StackPanel DockPanel.Dock="Right" Width="120">
            <TextBox Text="{Binding Value1}"/>
            <TextBox Text="{Binding Value2}"/>
        </StackPanel>
        <DynamicModelContent>
            <DynamicModelContent.Model>
                <DynamicModelField Name="V1" Value="{Binding Value1}"/>
                <DynamicModelField Name="V2" Value="{Binding Value2}"/>
            </DynamicModelContent.Model>
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding}"/>
                    <TextBlock Text="{Binding V1}"/>
                    <TextBlock Text="{Binding V2}">
                        <TextBlock.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding}"/>
                        </TextBlock.InputBindings>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DynamicModelContent>
    </DockPanel>
</Window>
