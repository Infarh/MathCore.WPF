<Window x:Class="MathCore.WPF.WindowTest.TestWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:MathCore.WPF.WindowTest"
        xmlns:vm="clr-namespace:MathCore.WPF.WindowTest.ViewModels"
        xmlns:oxy="http://oxyplot.org/wpf/contrib"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:MathCore.WPF.Behaviors;assembly=MathCore.WPF"
        Title="{Binding Title}"
        Width="800" Height="450">
    <Window.DataContext>
        <vm:TestWindow1ViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="График" Grid.Column="1">
            <i:Interaction.Behaviors>
                <behaviors:ActualSizeBinding ActualWidth="{Binding ElementWidth, Mode=OneWayToSource}"
                                             ActualHeight="{Binding ElementHeight, Mode=OneWayToSource}"/>
            </i:Interaction.Behaviors>
            <TextBlock Text="{Binding TextSize}" FontSize="30"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </GroupBox>

        <GridSplitter Grid.Column="0" HorizontalAlignment="Right"/>
    </Grid>
</Window>
