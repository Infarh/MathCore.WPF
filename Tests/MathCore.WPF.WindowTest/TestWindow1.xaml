<Window x:Class="MathCore.WPF.WindowTest.TestWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:MathCore.WPF.WindowTest"
        xmlns:vm="clr-namespace:MathCore.WPF.WindowTest.ViewModels"
        xmlns:oxy="http://oxyplot.org/wpf/contrib"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:MathCore.WPF.Behaviors;assembly=MathCore.WPF"
        Title="{Binding Title}"
        Width="800" Height="450">
    <Window.DataContext>
        <vm:TestWindow1ViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.DataContext>
            <DynamicModel>
                <DynamicModelField Name="Value1" Value="123"/>
                <DynamicModelField Name="Value2">
                    qwe
                </DynamicModelField>
            </DynamicModel>
        </Grid.DataContext>
        <GroupBox Header="Values" DataContext="{Binding Model}">
            <StackPanel>
                <TextBlock Text="{Binding Value1}"/>
                <TextBlock Text="{Binding Value2}"/>
            </StackPanel>
        </GroupBox>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" MinWidth="200" Margin="20" MaxWidth="350">
            <TextBox Text="{Binding [Value1].Value, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Text="{Binding [Value2].Value, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</Window>
